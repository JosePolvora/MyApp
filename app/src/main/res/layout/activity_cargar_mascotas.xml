<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityCargarMascotas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:gravity="center|top"
    android:orientation="vertical"
    android:paddingTop="50dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/content_desc_logo"
        android:src="@drawable/dogcatlogo" />


    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:background="@color/grey"
        android:gravity="center|top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/nombreMascota"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:hint="@string/text_nombre_mascota"
                android:importantForAutofill="no"
                android:textColorHint="@color/black"
                android:textSize="20sp"
                android:inputType="text|textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Raza"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:hint="@string/text_hint_raza"
                android:importantForAutofill="no"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:inputType="text|textPersonName" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/genero"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:hint="@string/text_hint_genero"
                android:importantForAutofill="no"
                android:textColorHint="@color/black"
                android:textSize="20sp"
                android:inputType="text|textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/especie"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:hint="@string/text_hint_especie"
                android:textColorHint="@color/black"
                android:textSize="20sp"
                android:importantForAutofill="no"
                android:inputType="text|textPersonName" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:orientation="horizontal">


            <Button

                android:id="@+id/btnFechaNac"
                style="?attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/clorRecomendado"
                android:text="@string/btn_text_fechaNac"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText

                android:id="@+id/fechaNac"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/text_fechaNac"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColorHint="@color/black"
                android:textSize="20sp"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button

                android:id="@+id/GuardarMascota"
                style="?attr/buttonBarButtonStyle"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/azul"
                android:text="@string/btn_text_cargarMascota"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:translationX="-15dp" />

            <Button

                android:id="@+id/btn_text_misMascotas"
                style="?attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/celeste"
                android:text="@string/btn_text_miMascota"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:translationX="15dp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>